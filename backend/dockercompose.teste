version: "3.7"
services:
  db:
    #image: invasorescontainerregistry.azurecr.io/postgis/postgis:latest
    image: postgis/postgis
    container_name: db_postgis
    restart: always
    environment:
      PGDATA: /var/lib/postgresql/data
    volumes:
      - db-data:/var/lib/postgresql/data
    ports:
      - "5432:5432"
  
#  pgadmin:
