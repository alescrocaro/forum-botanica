#    ports:
#      - "8080:80"
#    volumes:
#      - pgadmin-data:/var/lib/pgadmin
#    links:
#      - "db:pgsql-server"
  
  api:
    build:
      context: .
      dockerfile: ./Dockerfile
    image: api
    ports:
      - "3333:3333"
    depends_on:
      - db  # This makes sure the "db" service is started before the API service

volumes:
  db-data:
